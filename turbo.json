{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"], 
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false, 
      "persistent": true 
    },
    "lint": {
      "outputs": []
    }
  }
}